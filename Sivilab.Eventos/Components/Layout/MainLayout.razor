@inherits LayoutComponentBase

<!-- Header moderno -->
<header class="modern-header">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <!-- Logo y nombre de la empresa -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <div class="logo-container me-3">
                    <i class="fas fa-calendar-check logo-icon"></i>
                </div>
                <div class="brand-text">
                    <span class="brand-name">Registro Evento</span>
                    <small class="brand-tagline">Sistema de Validación CURP</small>
                </div>
            </a>

            <!-- Toggle button para móvil -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menú de navegación -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <i class="fas fa-home me-2"></i>Inicio
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#privacidad">
                            <i class="fas fa-shield-alt me-2"></i>Privacidad
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contacto">
                            <i class="fas fa-envelope me-2"></i>Contacto
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Contenido principal -->
<main class="main-content">
    @Body
</main>

