@model Sivilab.Portal.Models.Evento
@{
    ViewData["Title"] = "Eliminar Evento";
    var indiceEvento = ViewBag.IndiceEvento;
}

<style>
    body {
        background: linear-gradient(180deg, #2d6a5f 0%, #4a9b8e 100%);
        min-height: 100vh;
    }

    .delete-container {
        padding: 3rem 0;
        min-height: 100vh;
    }

    .delete-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
        animation: slideUp 0.5s ease;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .delete-title {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .delete-subtitle {
        text-align: center;
        color: #666;
        margin-bottom: 2rem;
    }

    .warning-box {
        background: linear-gradient(135deg, #ffe5e5, #ffcccc);
        border-left: 5px solid #e74c3c;
        padding: 1.5rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100%

    {
        box-shadow: 0 0 0 0 rgba(231, 76, 60, 0.4);
    }

    50% {
        box-shadow: 0 0 0 10px rgba(231, 76, 60, 0);
    }

    }

    .warning-box i {
        color: #e74c3c;
        font-size: 1.5rem;
    }

    .warning-box h4 {
        color: #c0392b;
        font-weight: 700;
        margin: 0.5rem 0;
    }

    .event-details {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .event-image-preview {
        text-align: center;
        margin-bottom: 2rem;
    }

        .event-image-preview img {
            max-width: 100%;
            max-height: 300px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

    .detail-row {
        display: flex;
        padding: 1rem 0;
        border-bottom: 1px solid #e9ecef;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        font-weight: 700;
        color: #2c3e50;
        width: 150px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .detail-value {
        flex: 1;
        color: #555;
    }

    .btn-delete-confirm {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        border: none;
        border-radius: 50px;
        padding: 1rem 3rem;
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(231, 76, 60, 0.4);
        width: 100%;
    }

        .btn-delete-confirm:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(231, 76, 60, 0.6);
            background: linear-gradient(135deg, #c0392b, #a93226);
            color: white;
        }

    .btn-cancel {
        background: linear-gradient(135deg, #95a5a6, #7f8c8d);
        border: none;
        border-radius: 50px;
        padding: 1rem 3rem;
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        width: 100%;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

        .btn-cancel:hover {
            background: linear-gradient(135deg, #7f8c8d, #6c7a89);
            transform: translateY(-3px);
            color: white;
        }

    .badge-status {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .badge-vigente {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
        color: white;
    }

    .badge-no-vigente {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
    }

    @@media (max-width: 768px) {
        .delete-card

    {
        padding: 2rem 1.5rem;
    }

    .delete-title {
        font-size: 2rem;
    }

    .detail-row {
        flex-direction: column;
    }

    .detail-label {
        width: 100%;
        margin-bottom: 0.5rem;
    }

    .btn-delete-confirm, .btn-cancel {
        padding: 0.8rem 2rem;
        font-size: 1rem;
    }

    }
</style>

<div class="delete-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="delete-card">
                    <h2 class="delete-title">
                        <i class="fas fa-exclamation-triangle"></i> Eliminar Evento
                    </h2>
                    <p class="delete-subtitle">¿Estás seguro de que deseas eliminar este evento?</p>

                    <div class="warning-box">
                        <i class="fas fa-skull-crossbones"></i>
                        <h4>⚠️ Advertencia</h4>
                        <p class="mb-0">
                            <strong>Esta acción no se puede deshacer.</strong> El evento será eliminado permanentemente del sistema y no podrá ser recuperado.
                        </p>
                    </div>

                    <div class="event-details">
                        @if (!string.IsNullOrEmpty(Model.imagen))
                        {
                            <div class="event-image-preview">
                                <img src="@Model.imagen" alt="@Model.titulo" />
                            </div>
                        }

                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-heading text-primary"></i> Título:
                            </div>
                            <div class="detail-value">
                                <strong>@Model.titulo</strong>
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-align-left text-info"></i> Descripción:
                            </div>
                            <div class="detail-value">
                                @Model.descripcion
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-calendar text-primary"></i> Fecha:
                            </div>
                            <div class="detail-value">
                                @Model.fecha
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-map-marker-alt text-danger"></i> Lugar:
                            </div>
                            <div class="detail-value">
                                @Model.lugar
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-link text-warning"></i> Liga:
                            </div>
                            <div class="detail-value">
                                <a href="@Model.liga" target="_blank">@Model.liga</a>
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-toggle-on text-success"></i> Estado:
                            </div>
                            <div class="detail-value">
                                @if (Model.vigente == 1)
                                {
                                    <span class="badge-status badge-vigente">
                                        <i class="fas fa-check"></i> Vigente
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-status badge-no-vigente">
                                        <i class="fas fa-times"></i> No Vigente
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" asp-route-id="@indiceEvento" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row mt-4">
                            <div class="col-md-6 mb-2">
                                <button type="submit" class="btn-delete-confirm">
                                    <i class="fas fa-trash-alt"></i> Sí, Eliminar Evento
                                </button>
                            </div>
                            <div class="col-md-6 mb-2">
                                <a asp-action="Index" class="btn-cancel">
                                    <i class="fas fa-arrow-left"></i> No, Volver Atrás
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>